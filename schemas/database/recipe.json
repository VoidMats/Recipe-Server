{
    "type": "object",
    "required": [
        "_id",
        "title"
    ],
    "properties": {
        "_id": {
            "bsonType": "objectId"
        },
        "title": {
            "type": "string",
            "description": "Title of the recipe"
        },
        "description": {
            "type": "string",
            "description": "Description of the recipe"
        },
        "time": {
            "type": "string",
            "description": "Cooking time of the recipe. This is a string, because so many recipes has different time"
        },
        "keywords": {
            "type": "array",
            "description": "Keywords for the recipe",
            "items": {
                "type": "string"
            }
        },
        "servings": {
            "type": "number",
            "description": "Number of servings of the recipe"
        },
        "image": {
            "type": "string",
            "description": "Id of the image"
        },
        "components": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the sub-meal of the recipe"
                    },
                    "ingredients": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "size": {
                                    "type": "string",
                                    "description": "This value will tell how many/size/volume is needed in the recipe" 
                                },
                                "unit": {
                                    "type": "string",
                                    "description": "Unit of the ingredient's value",
                                    "enum": [
                                        "st",
                                        "pcs",
                                        "g",
                                        "gr",
                                        "kg",
                                        "l",
                                        "liter",
                                        "dl",
                                        "ml",
                                        "",
                                        "cups",
                                        "tsk",
                                        "msk",
                                        "packet",
                                        "knippa",
                                        "knippa(or)",
                                        "nypa",
                                        "nypa(or)"
                                    ]
                                },
                                "ingredient": {
                                    "type": "string",
                                    "description": ""
                                }
                            }
                        }
                    }
                }
                
            }
        },
        "instructions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of this instruction"
                    },
                    "step": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "description": "Array with instructions in correct order"
                        }
                    }
                }
            }
        },
        "user": {
            "type": "object",
            "description": "Metadata for the user",
            "properties": {
                "score": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 10,
                    "description": "Score from 1-10"
                },
                "comment": {
                    "type": "string",
                    "description": "User comment"
                }
            }
        }
    }
}